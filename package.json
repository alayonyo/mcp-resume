{
  "name": "file-context-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for reading local folder files and providing context for queries with Claude AI integration",
  "type": "module",
  "bin": {
    "file-context-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js && chmod 755 build/http-server.js && chmod 755 build/chat-interface.js && chmod 755 build/local-chat.js",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "start:http": "node build/http-server.js http",
    "start:stdio": "node build/index.js",
    "chat": "node build/chat-interface.js",
    "chat:mock": "node build/chat-interface.js --mock",
    "local-chat": "node build/local-chat.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.2",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "filesystem",
    "files",
    "context"
  ],
  "author": "Your Name",
  "license": "MIT"
}
