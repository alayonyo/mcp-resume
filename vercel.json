{
  "version": 2,
  "builds": [
    {
      "src": "ui/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "api-resources/**/*.md",
          "shared-config.js",
          "shared-config.d.ts"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(css|js|png|jpg|ico))",
      "dest": "/ui/$1"
    },
    {
      "src": "/",
      "dest": "/ui/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
