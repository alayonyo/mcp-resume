{
  "version": 2,
  "builds": [
    {
      "src": "ui/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api-resources/**/*.md"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(css|js|png|jpg|ico))",
      "dest": "/ui/$1"
    },
    {
      "src": "/",
      "dest": "/ui/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js",
      "headers": {
        "Access-Control-Allow-Origin": "https://yonatan-ayalon.com",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, x-api-key, anthropic-version",
        "Access-Control-Allow-Credentials": "true"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
